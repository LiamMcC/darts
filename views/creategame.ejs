<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Users</title>
</head>
<body>

    <h1>Add Users</h1>

    <form id="userForm" action="/game" method="post">

        <div id="userInputs">
            <!-- Initial text box for username -->
            <div>
                <label for="username">Usernames:</label>
                <input type="text" name="username" required>
                <input type="text" name="username" required>
            </div>
        </div>

        <button type="button" onclick="addUserBox()">Add Box</button>

        <button type="submit">Submit</button>

    </form>

    <script>
        function addUserBox() {
            // Create a new div with label and input elements
            const newBox = document.createElement('div');
            newBox.innerHTML = `
                <label for="username">Username:</label>
                <input type="text" name="username" required>
            `;

            // Append the new div to the userInputs div
            document.getElementById('userInputs').appendChild(newBox);
        }
    </script>

</body>
</html>